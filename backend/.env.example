# =========================
# Backend Environment Variables
# =========================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Django Core Settings
DEBUG=1
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Format: cockroach://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=cockroach://root@db:26257/mydb?sslmode=disable

# Django Superuser (created automatically on first run)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=changeme123

# CORS Settings (comma-separated origins for production)
# CORS_ALLOWED_ORIGINS=http://localhost:5173,https://yourdomain.com

# Production Settings (uncomment for production)
# SECURE_SSL_REDIRECT=1
# SESSION_COOKIE_SECURE=1
# CSRF_COOKIE_SECURE=1
